{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentWidth": 2,
		"lineWidth": 80
	},
	"css": {
		"formatter": {
			"enabled": true,
			"indentWidth": 4
		},
		"parser": {
			"allowWrongLineComments": false
		}
	},
	"files": {
		"ignore": ["/nix/store/*", ".astro/*"]
	}
}
