{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentWidth": 2,
		"lineWidth": 80
	},
	"css": {
		"formatter": {
			"enabled": true,
			"indentWidth": 4
		},
		"parser": {
			"allowWrongLineComments": false,
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	},
	"files": {
		"ignore": ["/nix/store/*", ".astro/*"]
	}
}
