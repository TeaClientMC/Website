{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["./.astro/*", "/.pre-commit-config.yaml"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentWidth": 2,
		"lineWidth": 80,
		"ignore": ["./.astro/*", ".pre-commit-config.yaml", "/src/styles/*"]
	},
	"css": {
		"formatter": {
			"enabled": true,
			"indentWidth": 4
		},
		"parser": {
			"allowWrongLineComments": false
		}
	}
}
