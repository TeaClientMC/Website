---
import { SEO } from 'astro-seo';

// SEO SETTINGS
let title = "TeaClient Website";
let descr = "A Nice Opensourced Client.";
let url = "https://teaclient.net/";
let banner = "/banner.webp";
let favicon = "/Favicon.webp";
let theme_color = "#fffff"
---

<!doctype html>
<html lang="en">
  <head>
    <SEO
      title={title}
      description={descr}
      twitter={{
        title: title,
        creator: '@TeaClientMC',
        image: banner,
        card: 'summary_large_image',
        description: descr,
      }}
      openGraph={{
        basic: {
          title: title,
          type: 'website',
          image: banner,
          url: url
        },
        optional: {
          locale: "en-us",
          description: descr,
          siteName: "Teaclient Website"
        },
        image: {
          url: banner,
          secureUrl: url + "banner.webp",
          type: "webp",
          height: 30,
          width: 60,
          alt: "TeaClient Banner",
        }
      }}
      extend={{
        // extending the default link tags
        link: [
          { rel: 'icon', href: favicon },
          { rel: 'apple-touch-icon', type: 'image/x-icon', href: favicon}
        ],
        // extending the default meta tags
        meta: [
          { name: 'theme-color', content: theme_color },
          { name: 'darkreader-lock' },
          { httpEquiv: "ContentSecurityPolicy", content: "Content-Security-Policy: default-src 'none';  script-src 'self'; connect-src 'self'; img-src 'self'; style-src 'self' https://cdn.cloudflare.com;"},
          { name: "viewport", content: "width=device-1200px, initial-scale=1.0, shrink-to-fit=yes, viewport-fit=cover"},
        ],
      }}
    />
    <meta charset="UTF-8" />
    <script
      defer
      data-domain="teaclient.net"
      src="https://plausible.sudovanilla.com/js/script.js"></script>

  </head>
</html>
