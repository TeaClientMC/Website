<style>
.top-nav {
  background: var(--nav-color);
}

/* Menu Links */
.menu > li {
  @apply mx-4 overflow-hidden;
}

.sr-only {
  clip: rect(0,0,0,0);
}


/* Mobile Button */
.menu-button,
.menu-button::before,
.menu-button::after {
  @apply block bg-white absolute h-[4px] w-[30px] rounded-sm;
  transition: transform 400ms cubic-bezier(0.23, 1, 0.32, 1);
}

.menu-button::before {
  @apply mt-[-8px];
  content: '';
}

.menu-button::after {
  @apply mt-[8px];
  content: '';
}



#menu-toggle:checked + .menu-button-container .menu-button::before {
  @apply mt-0;
  transform: rotate(405deg);
}

#menu-toggle:checked + .menu-button-container .menu-button {
  @apply bg-[#ffffff00];
}

#menu-toggle:checked + .menu-button-container .menu-button::after {
  @apply mt-0;
  transform: rotate(-405deg);
}

@media (max-width: 1400px) {
  .menu-button-container {
    @apply flex;
  }
  .menu {
    @apply absolute top-0 mt-[90px] left-0 flex-col w-[100%] justify-center items-center;
  }
  #menu-toggle ~ .menu li {
    @apply h-0 m-0 p-0;
    border: 0;
    transition: height 400ms cubic-bezier(0.23, 1, 0.32, 1);
  }
  #menu-toggle:checked ~ .menu li {
    /* border: 1px solid #333; /* color of the dropdown menu dividers */
    height: 2.5em;
    padding: 0.5em;
    transition: height 400ms cubic-bezier(0.23, 1, 0.32, 1);
  }
  .menu > li {
    display: flex;
    justify-content: center;
    margin: 0;
    width: 100%;
    color: white;
    backdrop-filter: blur(10px);
    background: var(--nav-color); /* color of the dropdown menu background */
  }
  .menu > li:not(:last-child) {
    border-bottom: 1px solid #444;
  }
}
.nav-links {
  flex: 1;
  text-align: right;
}

  li {
    list-style: none;
    display: inline-block;
    padding: 8px 12px;
    position: relative;
  }

    a {
      color: var(--navBar-Items);
      text-decoration: none;
      font-weight: bold;
      font-size: 1.1rem;

      &:hover {
        color: var(--hover-color);
        text-decoration: none;
        font-weight: bold;
      }
    }




.checkbox {
  opacity: 0;
  position: absolute;
}

.checkbox-label {
  background-color: #2e2e2e;
  width: 50px;
  height: 26px;
  border-radius: 50px;
  position: relative;
  padding: 5px;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.fa-moon {color: #f1c40f;}

.fa-sun {color: #f39c12;}

.checkbox-label .ball {
  background-color: #ff9800;
  filter: drop-shadow(0px 0px 4px yellow);
  width: 22px;
  height: 22px;
  position: absolute;
  left: 2px;
  top: 2px;
  border-radius: 50%;
  transition: transform 0.2s linear;
}

.checkbox:checked + .checkbox-label .ball {
  transform: translateX(24px);
  background-color: #101010;
  filter: drop-shadow(0px 0px 4px white);
  
}
