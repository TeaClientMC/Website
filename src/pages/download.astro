---
import Layout from '../layouts/layout.astro';
---

<style>
  .download-box {
    background-color: rgba(250, 250, 250, 0.7);
    border-radius: 20px;
    backdrop-filter: blur(10px);
    padding: 20px;
    margin: 10px;
    text-align: center;
    justify-content: center;
  }

  .download-button {
    background-color: #b700ff;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    text-align: center;
    justify-content: center;
    text-decoration: none;
  }

  .notes-button {
    background-color: #c447f5;
    color: white;
    padding: 5px 10px;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    text-align: center;
    justify-content: center;
    text-decoration: none;
  }

  h1 {
    padding-top: 10%;
    font-size: 50px;
    color: white;
    text-align: center;
    justify-content: center;
  }

  p {
    font-size: 25px;
    color: white;
    text-align: center;
    justify-content: center;
  }
</style>

<Layout>
  <h1>TeaClient Downloads</h1>
  <p>Download the latest version of TeaClient here!</p>
  <div class="download-box">
    TeaClient latest release
    <a
      class="download-button"
      href="https://github.com/TeaClientMC/Client/releases/latest/installer.exe"
      >Download</a
    >
    <a
      class="notes-button"
      href="https://github.com/TeaClientMC/Client/releases">Release notes</a
    >
  </div>
</Layout>
