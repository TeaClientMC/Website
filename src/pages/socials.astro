---
import Layout from '../layouts/layout.astro';
import { Image } from 'astro:assets';
import Logo from '/public/Favicon.webp';
import DiscordSVG from '@assets/svgs/Discord.svg';
import GithubSVG from "@assets/svgs/Github.svg";

---

<Layout>
  <div class="box">
    <div class="logo-text-container">
      <a class="SocialText no-underline">TeaClient Socials</a>
      <br/>
      <a class="flex justify-between gap-3 text-indigo-500 no-underline">
        <Image width={32} height={32} src={DiscordSVG} alt='Discord Logo'/>
        Our Discord
       </a>
       <a class="github flex justify-between gap-3 no-underline">
        <Image width={32} height={32} src={GithubSVG} alt='Discord Logo'/>
        Our Github
       </a>
    </div>
  </div>
</Layout>

<style>
  .logo-text-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: auto;
    width: fit-content;
    gap: 10px;
  }
  .logo {
    border-radius: 50%;
  }
  .SocialText {
    padding-top: 10px;
    color: white;
  }

  .github {
    color: var(--navBar-Items);
  }

  .box {
    width: 60vh;
    height: 20vh;
    background-color: var(--nav-color);
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 10px;
    margin-top: 20%;
    margin-left: 30%;

    text-container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      margin: auto;
      width: fit-content;
      gap: 10px;
    }
  }
</style>
