---
import { getCollection } from "astro:content";
import WikiContent from "../../layouts/wikiContent.astro";
import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
	const wikis = await getCollection("wiki");
	return wikis.map((wiki) => ({
		params: { slug: wiki.slug },
		props: wiki,
	}));
}
type Props = CollectionEntry<"wiki">;

const post = Astro.props;
const { Content } = await post.render();

let developer = false;

if (post.slug.startsWith("developer")) {
	developer = true;
}
---

<WikiContent
	title={post.data.title}
	developer={developer}
	extraFooterClass={post.data.extraFooterClass}
>
	<Content />
</WikiContent>
