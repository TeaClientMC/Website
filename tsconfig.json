{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@layout": ["/src/layouts/*"],
      "@component": ["/src/components/*"],
      "@scripts": ["/src/scripts/*"],
      "@styles": ["/src/styles/*"],
      "@assets": ["/src/assets/*"]
    }
  }
}
